<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- App Identifier -->
    <key>com.apple.application-identifier</key>
    <string>$(TeamIdentifierPrefix)com.whispernode.app</string>
    <key>com.apple.developer.team-identifier</key>
    <string>$(TeamIdentifierPrefix)</string>
    
    <!-- App Sandbox -->
    <key>com.apple.security.app-sandbox</key>
    <true/>
    
    <!-- Audio Input Permissions -->
    <key>com.apple.security.device.microphone</key>
    <true/>
    <key>com.apple.security.device.audio-input</key>
    <true/>
    
    <!-- File Access -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    <key>com.apple.security.files.downloads.read-write</key>
    <true/>
    
    <!-- Network Access (for model downloads and updates) -->
    <key>com.apple.security.network.client</key>
    <true/>
    <key>com.apple.security.network.server</key>
    <false/>
    
    <!-- Accessibility (for global hotkeys and text insertion) -->
    <key>com.apple.security.accessibility</key>
    <true/>
    
    <!-- Hardened Runtime - Enable for production security -->
    <key>com.apple.security.cs.disable-executable-page-protection</key>
    <false/>
    
    <!-- Disable library validation only for release builds with signed dylibs -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <false/>
</dict>
</plist>